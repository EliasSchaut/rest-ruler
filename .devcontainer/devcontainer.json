{
	"name": "Java",
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "latest",
			"installMaven": "false",
			"installGradle": "true"
		}
	},

	"postCreateCommand": "./gradlew assemble && java -jar build/libs/rest-ruler.jar -h && ./gradlew test && ./gradlew jacocoTestReport"
}
